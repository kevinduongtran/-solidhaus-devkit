{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./src",
    "paths": {
      "@app/*": [ "app/*" ],
      "@assets/*": [ "assets/*" ],
      "@core/*": [ "app/core/*" ],
      "@env": [ "environments/environment" ],
      "@pages/*": [ "app/pages/*" ],
      "@shared/*": [ "app/shared/*" ],
      "@tests/*": [ "./*" ],
      "@theme/*": [ "theme/*" ]
    },
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ]
  }
}
